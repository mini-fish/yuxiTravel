<!-- 实时天气 -->
<view class="top">
  <text>{{weatherData}}</text>
</view>
<!-- 未来天气 -->
<view style="padding-top:30px"></view>
<view wx:for="{{futureWeather}}" wx:key="index">
  <view class="center">
    <view>{{item.date}}</view>
    <view>{{item.temperature}}</view>
    <view>{{item.weather}}</view>
    <view>{{item.wind}}</view>
  </view>
</view>
</view>