/* 轮播图 */

swiper {
  width: 100%;
  height: 150px;
}

image {
  width: 100%;
}

/* 顶部 */

.top {
  margin: 10px;
  width: 95%;
  position: relative;
  /* padding-right: 10px;  */
}

.top-title {
  font-size: 17px;
  font-weight: bold;
}

.top-text {
  line-height: 20px;
}

.top-text text {
  font-size: 12px;
}

/* 中部 */

.center {
  width: 100%;
  height: 150rpx;
  position: relative;
  padding-left: 10px;
  padding-right: 10px;
}

.center-left {
  position: absolute;
  top: 50%;
  font-size: 15px;
}

.center-left image {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.center-right image {
  position: absolute;
  top: 40%;
  margin-right: 15px;
  right: 15px;
  width: 50px;
  height: 30px;
}

/* 底部 */

.foot {
  margin-bottom: 30px;
  padding-left: 10px;
  padding-right: 10px;
}

.foot-top {
  width: 100%;
  height: 25px;
  font-size: 15px;
}

.foot-top image {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.foot-top text {
  font-size: 15px;
  line-height: 25px;
}

.foot-center {
  margin-top: 10px;
}

.foot-center image {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.foot-center .foot-center-t {
  font-size: 15px;
  line-height: 25px;
}

.foot-center text {
  font-size: 12px;
  line-height: 25px;
}

.foot-center-t1 text {
  font-size: 12px;
}

.foot-bottom {
  margin-top: 10px;
}

.foot-bottom image {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.foot-bottom text {
  font-size: 15px;
  line-height: 25px;
}

.foot-bottom-price text {
  font-size: 12px;
}

/* 评论 */

.pinglun-tip {
  font-size: 15px;
  color: goldenrod;
  font-weight: bold;
  margin-left: 10px;
  margin-bottom: 20rpx;
}

.pinglun {
  margin-bottom: 35px;
  border-bottom: 1px solid #666;
  margin-left: 10px;
}

.pinglun text {
  line-height: 25px;
  display: block;
  font-size: 15px;
}

/* 底部固定 */

/* 收藏 */

.foot-fixed {
  width: 100%;
  height: 25px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.foot-fixed image {
  width: 20px;
  height: 20px;
}

.foot-fixed-left image {
  margin-left: 15px;
}

/* 发表评论 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.mask-content {
  width: 85%;
  height: 620rpx;
  position: fixed;
  top: 25%;
  left: 60rpx;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mask-content .button1 {
  border: 0;
  background-color: #46B7FE;
  color: #fff;
  margin-top: 20rpx;
}
.mask-content .button2 {
  border: 0;
  background-color: #46B7FE;
  color: #fff;
  margin-top: 20rpx;
}

.foot-fixed-center button {
  border: 0;
}

.foot-fixed-center .mask-content textarea {
  width: 95%;
  height: 400rpx;
  border-bottom: 1px solid #666;
  margin-top: 30rpx;
}

/* 分享 */

.foot-fixed-right image {
  margin-right: 15px;
}

.foot-fixed-right button {
  border: 0;
}

.foot-fixed button image {
  margin-bottom: -7px;
}
