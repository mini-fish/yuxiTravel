
/* 轮播图 */

swiper{
  width: 750rpx;
  height: 375rpx;
}

image{
  width: 750rpx;
  height: 375rpx;
}



/* 导航栏 */

.img_center{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
  margin-left: 45px;
  margin-right: 40px;
}
.img_center image{
  height: 60px;
  width: 60px;
  flex-direction: row;
}
.img_center text{
  display: inline-block;
  width: 50px;
  height: 20px;
  font-size: 10px;
  margin-left: 10px;
}


/* 横线 */

.line{
  margin: 10px auto;
  height: 2px;
  background-color: #d8d8d8;
}


/* 景点推荐 */

.foot{
  margin-left: 10px;
}
.recommend{
display: flex;
flex-direction: row;
justify-content: space-between;
flex-wrap:wrap;
height: 150px;
width: 93%;
margin-top: 15px;
}
.recommend image{
display: block;
width: 140px;
height: 100px;
margin-left: 20px;
}
.recommend_one{
width: 140px;
height: 50px;
background-color:#F0F0F0;
margin-left: 20px;
}
.recommend_one image{
  display: block;
  width: 18px;
  height: 18px;
  margin: 0px;
  float: left;
}
.recommend_one .t1{
  display: block;
  font-size: 14px;
  color: #333;
  /* float: left; */
}
.recommend_one .t2{
  font-size: 10px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left:5px; 
}